<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Điền mô tả">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Điền mô tả">
        </div>
        <div class="form-group">
            <label for="videoID">Video</label>
            <input type="text" class="form-control" id="videoID" name="videoID" placeholder="Điền mô tả">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Điền mô tả">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>